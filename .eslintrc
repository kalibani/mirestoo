{
    "extends": ["airbnb", "prettier"],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": ["node_modules", "src/"],
          "extensions": [".js", ".jsx"]
        }
      }
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["react", "jsx-a11y", "eslint-plugin-prettier", "prettier"],
    "rules": {
      "react/prefer-stateless-function": 0,
      "space-before-function-paren": ["error", "never"],
      "import/no-named-as-default": 0,
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "jsxSingleQuote": true,
          "tabWidth": 2,
          "semi": true,
          "arrowParens": "always",
          "bracketSpacing": true
        }
      ],
      "import/named": "off",
      "max-depth": [
        "warn",
        {
          "max": 4
        }
      ],
      "linebreak-style": "off",
      "react/no-array-index-key": ["off"],
      "max-len": ["off"],
      "react/forbid-prop-types": [
        1,
        {
          "forbid": ["any"]
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [".js", ".jsx"]
        }
      ],
      "react/no-danger": ["off"],
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never",
          "jsx": "never"
        }
      ],
      "jsx-a11y/label-has-for": [
        0,
        {
          "components": ["Label"],
          "allowChildren": true
        }
      ],
      "no-console": [
        "error",
        {
          "allow": ["warn", "error"]
        }
      ],
      "comma-dangle": ["error", "never"],
      "no-unused-vars": [
        "error",
        {
          "args": "none",
          "caughtErrors": "all"
        }
      ],
      "no-shadow": [
        "off",
        {
          "allow": ["props"]
        }
      ],
      "no-param-reassign": [
        "warn",
        {
          "props": false
        }
      ],
      "import/no-cycle": "off",
      "import/no-extraneous-dependencies": "off",
      "no-nested-ternary": "off",
      "radix": "off",
      "func-names": "off",
      "prefer-destructuring": "off",
      "newline-per-chained-call": [
        "error",
        {
          "ignoreChainWithDepth": 6
        }
      ],
      "no-plusplus": [
        2,
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_isMounted"
          ]
        }
      ]
    }
  }
  